<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo -->
    <solid android:color="@color/cyan" />

    <!-- Bordes: podés hacer esquinas cuadradas o redondeadas -->
    <corners android:radius="10dp" /> <!-- Cambiá a 10dp para redondeado -->

    <!-- Borde del botón (opcional) -->
    <stroke
        android:width="3dp"
        android:color="@color/black" />
</shape>